{
  "name": "xunit-mocha-reporter",
  "version": "2.1.0",
  "description": "An XUnit Reporter for Mocha",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && yarn format",
    "format": "npx prettier --config .prettierrc.yml \"**/*.{js,ts,json,md}\" --write",
    "pretest": "rm -rf test/results.*.xml",
    "test": "node_modules/.bin/mocha test --reporter=spec",
    "tdd": "yarn test --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx eslint"
    ],
    "**/*.{css,scss,js,jsx,ts,tsx,md}": [
      "prettier --config .prettierrc.yml --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/md5": "^2.1.33",
    "@types/mkdirp": "~0.5.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.21",
    "@types/xml": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "chai": "^3.0.0",
    "chai-xml": "^0.3.0",
    "debug": "^4.1.1",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "2.4.5",
    "prettier": "^1.19.1",
    "test-console": "^1.0.0",
    "typescript": "^3.7.3",
    "xml": "^1.0.0"
  },
  "dependencies": {
    "md5": "^2.1.0",
    "mkdirp": "~0.5.1",
    "strip-ansi": "^5.2.0",
    "fast-xml-parser": "^3.15.1",
    "he": "^1.2.0"
  },
  "peerDependencies": {
    "mocha": ">=2.2.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MGMResorts/xunit-mocha-reporter.git"
  },
  "keywords": [
    "mocha",
    "xunit",
    "report"
  ],
  "author": "Patrick Assuied & Julian Coy",
  "license": "MIT",
  "contributors": [
    "Julian Coy <julian@superformula.com> (https://github.com/julian-sf)",
    "Patrick Assuied (https://github.com/passuied)"
  ],
  "bugs": {
    "url": "https://github.com/MGMResorts/xunit-mocha-reporter/issues"
  },
  "homepage": "https://github.com/MGMResorts/xunit-mocha-reporter#readme"
}
